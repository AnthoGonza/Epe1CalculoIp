<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111"
    android:orientation="vertical">
    //PARTE SUPEIOR
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:padding="14dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALCULO IP CHILE"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bienvenido: Anthony Gonzales"
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp"
                android:textAlignment="center"
                android:id="@+id/txtInfo"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        //NOTAS SOLEMNES
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="25dp"
            android:paddingRight="25dp">
            //NOTAS SOLEMNES
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                //TITULO
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOTAS SOLEMNES"
                    android:textColor="#909090"
                    android:paddingTop="25dp"
                    android:paddingBottom="25dp"/>
                //EPE
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:background="#252525"
                    android:padding="15dp"
                    android:textColorHint="#505050"
                    android:textColor="@android:color/white"
                    android:hint="Ingresa EPR1"
                    android:inputType="numberDecimal"
                    android:id="@+id/txtEpr1"
                    android:maxLength="4" />
                //EPE
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:background="#252525"
                    android:padding="15dp"
                    android:textColorHint="#505050"
                    android:textColor="@android:color/white"
                    android:inputType="numberDecimal"
                    android:hint="Ingresa EPE1"
                    android:id="@+id/txtEpe1"
                    android:maxLength="4" />
                //EPE
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:background="#252525"
                    android:padding="15dp"
                    android:textColorHint="#505050"
                    android:textColor="@android:color/white"
                    android:inputType="numberDecimal"
                    android:hint="Ingresa EPR2"
                    android:id="@+id/txtEpr2"
                    android:maxLength="4" />
                //EPE
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:background="#252525"
                    android:padding="15dp"
                    android:textColorHint="#505050"
                    android:inputType="numberDecimal"
                    android:textColor="@android:color/white"
                    android:hint="Ingresa EPE2"
                    android:id="@+id/txtEpe2"
                    android:maxLength="4" />
            </LinearLayout>
            //NOTAS EVAS
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                //TITULO
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOTAS EVAS"
                    android:paddingTop="25dp"
                    android:textColor="#909090"
                    android:paddingBottom="25dp"/>
                //EVA 1
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:inputType="numberDecimal"
                    android:background="#252525"
                    android:padding="15dp"
                    android:textColorHint="#505050"
                    android:textColor="@android:color/white"
                    android:hint="Ingresa EVA 1"
                    android:id="@+id/txtEva1"
                    android:maxLength="4" />
                //EVA 2
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:inputType="numberDecimal"
                    android:background="#252525"
                    android:padding="15dp"
                    android:textColorHint="#505050"
                    android:textColor="@android:color/white"
                    android:hint="Ingresa EVA 2"
                    android:id="@+id/txtEva2"
                    android:maxLength="4" />
                //EVA 3
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:background="#252525"
                    android:inputType="numberDecimal"
                    android:padding="15dp"
                    android:textColorHint="#505050"
                    android:textColor="@android:color/white"
                    android:hint="Ingresa EVA 3"
                    android:id="@+id/txtEva3"
                    android:maxLength="4" />
                //EVA 4
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:background="#252525"
                    android:padding="15dp"
                    android:textColorHint="#505050"
                    android:textColor="@android:color/white"
                    android:hint="Ingresa EVA 4"
                    android:id="@+id/txtEva4"
                    android:inputType="numberDecimal"
                    android:maxLength="4" />
            </LinearLayout>
            //BOTON
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="CALCULAR"
                    android:textColor="@android:color/white"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:background="@color/colorPrimary"
                    android:id="@+id/btnAceptar" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
